<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'>
    <ui:with field="res" type="com.jci.client.resource.CommonResource"/>
    <ui:with field="mainRes" type="com.jci.client.resource.main.MainResource"/>
    <ui:with field="nameTokens" type="com.jci.client.place.NameTokens"/>

    <g:HTMLPanel>
        <div class="{res.style.width} {res.style.dragUp} {res.style.shadow}">
            <div class="{mainRes.style.sliderWrapper} {res.style.round}">
                <div class="{mainRes.style.sliderPhoto} carousel slide" id="myCarousel">
                    <div class="carousel-inner">
                        <div class="item active clearfix">
                            <div class="{mainRes.style.textSlider}">
                                <p class="bebas">A wonderful city</p>
                            </div>
                            <g:Image resource="{mainRes.homeImage004}" altText="Quebec city"/>
                        </div>
                        <div class="item clearfix">
                            <div class="{mainRes.style.textSlider}">
                                <p class="bebas">A magic nightlife</p>
                            </div>
                            <g:Image resource="{mainRes.homeImage002}" altText="Nightlife of Quebec city"/>
                        </div>
                        <div class="item clearfix">
                            <div class="{mainRes.style.textSlider}">
                                <p class="bebas">An historical city</p>
                            </div>
                            <g:Image resource="{mainRes.homeImage003}" altText="The Battlefields Park of Quebec"/>
                        </div>
                        <div class="item clearfix">
                            <div class="{mainRes.style.textSlider}">
                                <p class="bebas">A romantic ambiance</p>
                            </div>
                            <g:Image resource="{mainRes.homeImage001}" altText="Romantic ambiance of Quebec city"/>
                        </div>
                        <div class="item clearfix">
                            <div class="{mainRes.style.textSlider}">
                                <p class="bebas">A modern city</p>
                            </div>
                            <g:Image resource="{mainRes.homeImage005}" altText="Port of Quebec"/>
                        </div>
                    </div>


                    <div class="{mainRes.style.button_visio}">
                        <ol class="carousel-indicators">
                            <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
                            <li data-target="#myCarousel" data-slide-to="1"></li>
                            <li data-target="#myCarousel" data-slide-to="2"></li>
                            <li data-target="#myCarousel" data-slide-to="3"></li>
                            <li data-target="#myCarousel" data-slide-to="4"></li>
                        </ol>
                    </div>
                </div>
                <div class="{mainRes.style.sliderButtons}">
                    <div>
                        <p><a href="http://www.jccq.qc.ca/Categorie-dactivites/Congres-National-et-AGA-JCI-Canada/Convention-Nationale-JCI-Canada-2013-2013-JCI-Canada-National-Convention.aspx"
                                  target="_blank">Register<br/>
                            NOW!</a>
                        </p>
                    </div>

                    <div>
                        <p><a href="#{nameTokens.getRegister}">Getting to
                            <br/>
                            Quebec City</a>
                        </p>
                    </div>

                    <div>
                        <p><a href="#{nameTokens.getRegister}">Convention
                            <br/>
                            Hotel</a>
                        </p>
                    </div>

                    <div>
                        <p><a href="program.pdf">Look at the
                            <br/>
                            Programs</a>
                        </p>
                    </div>
                </div>

            </div>
        </div>

    </g:HTMLPanel>
</ui:UiBinder>
